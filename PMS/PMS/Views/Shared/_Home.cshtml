<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    <style>
        .container {
            margin: 40px
        }

        .head {
            padding: 60px;
            padding-top: 50px;
            background-color: black;
            width: 100%;
            color: white;
        }

        .log {
            float: right;
            margin-right: -20px;
            margin-top: -10px
        }

            .log a {
                text-decoration: none;
            }

                .log a:hover {
                    color: chartreuse;
                }

        .log2 {
            float: left;
            margin-top: -17px
        }

            .log2 a {
                text-decoration: none;
                font-size: 36px;
            }

        ul {
            list-style: none;
        }

            ul li {
                display: inline-block;
                font-size: 14px
            }
    </style>
</head>
<body>
    <div class="head">
        <div class="log2"><a href="#">Lights</a></div>
        <div class="log">
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <button class="w3-button w3-xlarge w3-right" style="background-color:transparent" onclick="openRightMenu()">&#9776;</button>

    <div class="w3-sidebar w3-bar-block w3-card w3-animate-right" style="display:none;right:0;" id="rightMenu">
        <button onclick="closeRightMenu()" class="w3-bar-item w3-button w3-large">&#9776;</button>
        <a href="#" class="w3-bar-item w3-button">Home</a>
        <a href="#" class="w3-bar-item w3-button">Contact</a>
        <a href="#" class="w3-bar-item w3-button">About</a>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer style="text-align:center">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script>

        function openRightMenu() {
            document.getElementById("rightMenu").style.display = "block";
        }

        function closeRightMenu() {
            document.getElementById("rightMenu").style.display = "none";
        }
    </script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
