@model PMS.Models.user

@{
    ViewBag.Title = "DetailUser";
    Layout = "~/Views/Shared/_admin_MD_TL.cshtml";
}


<!DOCTYPE html>
<head>
  <style>
      .box {
          width: 400px;
          padding: 40px;
          margin-top: 120px;
         
          float: left;
          border: 4px solid rgba(255,255,255,1);
          border-top: none;
          box-shadow: 0 15px 25px rgba(0,0,0,.5);
          border-radius: 20px;
          height: 460px;
          padding-top: 15px;
      }
      .input {
          width: 100%;
          padding: 12px 20px;
          margin: 8px 0;
          box-sizing: border-box;
          border: none;
          border-bottom: 2px solid gray;
      }
      .boxs {
         
           float:right;
          color: black;
          text-align:left;
          
      }
      .link {
          background: #FFF;
          color: #000;
          text-shadow: 1px 0px 1px rgba(0,0,0,0.6);
          font-size: 16px;
       
          text-align: center;
          width: 200px;
          height: 40px;
          padding-left: 0px;
          margin-top: 30px;
      }

  </style>  

</head>
<div>
    <h4>user</h4>
    <hr />
    <ul class="box">
        <li class="input">
            <label class="control-label col-md-2">Photo:</label>
            <span class="boxs">
                @Html.DisplayFor(model => model.photo)
            </span>
           <!--image <img src="/AppFile/image" class="img-circle" alt="Cinque Terre">-->

        </li>
        
        <li  class="input">

            <label class="control-label col-md-2">Name:</label>
            <span class="boxs "> @Html.DisplayFor(model => model.Username)</span>
        </li>

         
         <li class="input">
               <label class="control-label col-md-2">Phone:</label>
               <span class="boxs">  @Html.DisplayFor(model => model.phone)</span>
        </li>

        <li class="input">
                   <label class="control-label col-md-2">Email:</label>
                   <span class="boxs">@Html.DisplayFor(model => model.email)</span>
        </li>

        <li class="input">
                   <label class="control-label col-md-2">Experiene:</label>
                   <span class="boxs">  @Html.DisplayFor(model => model.experience)</span>
        </li>

               
        <p class="link">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Username }) |
            @Html.ActionLink("Back to Home", "Index")
        </p>         
               
    </ul>
</div>

